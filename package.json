{
  "name": "xusd-contracts",
  "version": "0.1.0",
  "description": "XUSD.fi Contracts",
  "main": "index.js",
  "scripts": {
    "deploy": "npx hardhat deploy --export 'deployments/network.json'",
    "deploy:fuji": "npx hardhat deploy --network fuji --verbose --export 'deployments/network.fuji.json'",
    "deploy:mainnet": "npx hardhat deploy --network mainnet --verbose --export 'deployments/network.mainnet.json'",
    "run_node": "./scripts/node.sh",
    "run_node:fork": "./scripts/node.sh fork",
    "lint": "yarn run lint:js && yarn run lint:sol",
    "lint:js": "eslint \"test/**/*.js\"",
    "lint:sol": "solhint \"contracts/**/*.sol\"",
    "prettier": "yarn run prettier:js && yarn run prettier:sol",
    "prettier:check": "prettier -c \"*.js\" \"deploy/**/*.js\"  \"scripts/**/*.js\" \"smoke/**/*.js\" \"scripts/**/*.js\" \"tasks/**/*.js\" \"test/**/*.js\" \"utils/**/*.js\"",
    "prettier:js": "prettier --write \"*.js\" \"deploy/**/*.js\"  \"scripts/**/*.js\" \"smoke/**/*.js\" \"scripts/**/*.js\" \"tasks/**/*.js\" \"test/**/*.js\" \"utils/**/*.js\"",
    "prettier:sol": "prettier --write \"contracts/**/*.sol\"",
    "prepare": "cd .. && husky install contracts/.husky",
    "test": "IS_TEST=true npx hardhat test",
    "fund": "FORK=true npx hardhat fund --network localhost",
    "echidna": "yarn run clean && echidna-test . --contract PropertiesXUSDTransferable --config contracts/crytic/TestXUSDTransferable.yaml",
    "slither": "yarn run clean && slither . --filter-paths \"crytic|mocks|@openzeppelin\" --exclude-low --exclude-informational --exclude conformance-to-solidity-naming-conventions,different-pragma-directives-are-used,external-function,assembly,incorrect-equality",
    "clean": "rm -rf build crytic-export artifacts cache deployments/local*"
  },
  "author": "XUSD.fi",
  "license": "MIT",
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.2",
    "@nomiclabs/hardhat-etherscan": "^2.1.7",
    "@nomiclabs/hardhat-solhint": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@openzeppelin/contracts": "4.3.1",
    "@openzeppelin/hardhat-upgrades": "^1.10.0",
    "@uniswap/v3-core": "^1.0.0",
    "@uniswap/v3-periphery": "^1.1.1",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "eslint": "^7.32.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^5.4.6",
    "hardhat": "^2.6.4",
    "hardhat-contract-sizer": "^2.0.3",
    "hardhat-deploy": "^0.9.1",
    "hardhat-deploy-ethers": "^0.3.0-beta.10",
    "husky": "^7.0.2",
    "lodash": "^4.17.21",
    "papaparse": "^5.3.1",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.17",
    "solc": "0.8.6",
    "solhint": "^3.3.6",
    "solidifier": "^2.1.0",
    "solidity-coverage": "^0.7.17",
    "truffle": "^5.4.9",
    "truffle-flattener": "^1.5.0",
    "web3-utils": "^1.5.2"
  }
}
